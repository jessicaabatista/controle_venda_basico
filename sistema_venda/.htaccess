# Configuração do Apache para Sistema de Vendas

# Habilitar rewrite engine
RewriteEngine On

# Definir base path
RewriteBase /sistema_venda/

# Configurações de segurança
Options -Indexes
ServerSignature Off

# Configurações de CORS para assets
<IfModule mod_headers.c>
    <FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$">
        Header set Access-Control-Allow-Origin "*"
        Header set Cache-Control "public, max-age=31536000"
    </FilesMatch>
</IfModule>

# Forçar encoding correto para CSS e JS
<IfModule mod_mime.c>
    AddType text/css .css
    AddType application/javascript .js
    AddType image/svg+xml .svg
</IfModule>

# Compressão gzip
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Regras de rewrite para API
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} ^/sistema_venda/public/api/ [NC]
RewriteRule ^(.*)$ public/api/$1 [L,QSA]

# Redirecionar requisições para a pasta public (se não for um arquivo ou diretório existente)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ public/$1 [L,QSA]

# Permitir acesso direto aos assets
RewriteCond %{REQUEST_URI} ^/sistema_venda/public/assets/ [NC]
RewriteRule ^(.*)$ - [L]

# Permitir acesso direto aos uploads
RewriteCond %{REQUEST_URI} ^/sistema_venda/public/uploads/ [NC]
RewriteRule ^(.*)$ - [L]

# Configurações de PHP
<IfModule mod_php.c>
    php_flag display_errors On
    php_value error_reporting E_ALL
    php_value max_execution_time 300
    php_value memory_limit 256M
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
</IfModule>

# Configurações para PHP 7+
<IfModule mod_php7.c>
    php_flag display_errors On
    php_value error_reporting E_ALL
    php_value max_execution_time 300
    php_value memory_limit 256M
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
</IfModule>

# Configurações para PHP 8+
<IfModule mod_php8.c>
    php_flag display_errors On
    php_value error_reporting E_ALL
    php_value max_execution_time 300
    php_value memory_limit 256M
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
</IfModule>

# Página padrão
DirectoryIndex index.php index.html

# Configurações de segurança adicionais
<Files ".ht*">
    Require all denied
</Files>

<Files "config*">
    Require all denied
</Files>

# Evitar exposição de arquivos sensíveis
<FilesMatch "\.(log|sql|bak|backup|old)$">
    Require all denied
</FilesMatch>
